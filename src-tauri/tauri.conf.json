{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "Wallpaper Mate",
  "version": "1.0.0",
  "identifier": "com.wallpapermate.app",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:5173",
    "beforeDevCommand": "pnpm dev",
    "beforeBuildCommand": "pnpm build"
  },
  "app": {
    "windows": [
      {
        "title": "Wallpaper Mate",
        "width": 800,
        "height": 600,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": null
    },
    "withGlobalTauri": true
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  },
  "plugins": {
    "tray": {
      "iconPath": "icons/32x32.png",
      "iconAsTemplate": true
    }
  }
}
